// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Network {
  ETHEREUM
  SOLANA
}

model UserProfile {
  id          String        @id @default(uuid())
  email       String        @unique
  eth_address String?
  sol_address String?
  agreements  Agreement[]
  updatedAt   DateTime      @updatedAt
  createdAt   DateTime      @default(now())
}

model Agreement {
  id              String      @id @default(uuid())
  requesterId     String
  requester       UserProfile @relation(fields: [requesterId], references: [id])
  cid             String
  allowedNetworks Network[]   @default([ETHEREUM])
  signatures      Signature[]
  s3Storage       S3Storage?
  updatedAt       DateTime    @updatedAt
  createdAt       DateTime    @default(now())
}

model Signature {
  id              String        @id @default(uuid())
  transactionHash String?
  network         Network?
  signerAddress   String?
  agreementId     String
  agreement       Agreement     @relation(fields: [agreementId], references: [id])
  updatedAt       DateTime      @updatedAt
  createdAt       DateTime      @default(now())
}

model S3Storage {
  id          String    @id @default(uuid())
  bucket      String
  key         String
  agreementId String    @unique 
  agreement   Agreement @relation(fields: [agreementId], references: [id])
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}
